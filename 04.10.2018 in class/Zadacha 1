using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication3
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("a = ");
            var a = double.Parse(Console.ReadLine());
            Console.Write("P = ");
            Console.WriteLine(4*a);
            Console.Write("S = ");
            Console.WriteLine(a*a);
            Console.ReadLine();
        }
    }
}
